<div class="max-w-md">
    <dev class="text-5xl font-bold my-4">
        {{ section.settings.title }}
    </dev>
    <div class="my-4">
        <p class="text-base md:text-xl leading-normal">{{ section.settings.subtitle }}</p>
    </div>
    <div class="my-4">
        {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.url %}
        {% else %}
            {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a href="{{ shop_url }}" class="px-4 inline py-2 text-base font-medium shadow bg-green-600 hover:bg-green-800 text-white" >{{ section.settings.button_label }}</a>
    </div>
</div>


{% schema %}
{
    "name": "Template 404",
    "tag": "section",
    "class": "flex items-center justify-center text-center py-7 h-screen",
    "settings": [
            {
                "type": "text",
                "id": "title",
                "default": "404",
                "label": "404 Heading Title"
            },
            {
                "type": "text",
                "id": "subtitle",
                "default": "The page you are looking for is not found",
                "label": "404 Heading Subtitle"
            },
            {
                "type": "text",
                "id": "button_label",
                "default": "Return to shop.",
                "label": "Return to shop label"
            },
            {
                "type": "url",
                "id": "button_url",
                "label": "Button URL"
            }
        ]
}
{% endschema %}